<div class="flex-none gap-x-5 grid grid-cols-11 bg-zinc-100 mb-5 py-4 px-4 rounded-lg items-center">
  <div class="px-4 col-span-2 grid grid-cols-1 h-44 bg-orange-200 rounded-xl items-center ">
    <p class="line-clamp-2 text-xl w-full h-max text-zinc-600 font-bold items-center place-content-center align-bottom"><%= course.title %></p>
    <%#= button_to new_user_course_lesson_path(current_user, course.id), method: :get, class: 'flex bg-orange-100 w-full text-sm rounded-box border-[1px] border-zinc-800 text-zinc-700 px-2 py-2 place-content-center' do %>
    <!--    Новый урок-->
    <%# end %>
    <%#= button_to new_user_course_path(current_user), class: 'flex bg-orange-100 w-full text-xs rounded-box border-[1px] border-zinc-800 text-zinc-700 px-2 py-2 place-content-center' do %>
    <!--      Редактировать-->
    <%# end %>

    <!--      кнопка добавления урока в курс-->
    <div class="flex justify-center">
      <a href="<%= course_lessons_path(course.id) %>" role="button" class="flex me-1 col-span-1 w-7 h-7 justify-center items-center">
        <svg class="h-10 w-10" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path d="M12 6V18" stroke="#000000" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M6 12H18" stroke="#000000" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>

      <!--      кнопка редактирования курса-->
      <a href="<%= course_lessons_path(course.id) %>" role="button" class="flex ms-1 me-1 col-span-1 w-7 h-7 justify-center items-center">
        <svg class="h-10 w-10" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path d="M15.6287 5.12132L4.31497 16.435M15.6287 5.12132L19.1642 8.65685M15.6287 5.12132L17.0429 3.70711C17.4334 3.31658 18.0666 3.31658 18.4571 3.70711L20.5784 5.82843C20.969 6.21895 20.969 6.85212 20.5784 7.24264L19.1642 8.65685M7.85051 19.9706L4.31497 16.435M7.85051 19.9706L19.1642 8.65685M7.85051 19.9706L3.25431 21.0312L4.31497 16.435" stroke="#000000" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>

      <!--      кнопка удаления курса-->
      <%= button_to course_path(course.id), :method => :delete, class: 'flex ms-1 col-span-1 w-7 h-7 justify-center items-center' do%>
      <svg class="h-10 w-10" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path d="M5 7.5H19L18 21H6L5 7.5Z" stroke="#000000" stroke-linejoin="round"/>
        <path d="M15.5 9.5L15 19" stroke="#000000" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M12 9.5V19" stroke="#000000" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M8.5 9.5L9 19" stroke="#000000" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M16 5H19C20.1046 5 21 5.89543 21 7V7.5H3V7C3 5.89543 3.89543 5 5 5H8M16 5L15 3H9L8 5M16 5H8" stroke="#000000" stroke-linejoin="round"/>
      </svg>
      <% end %>
    </div>
    <span class="line-clamp-2 text-zinc-600 text-sm"><%= course.description %></span>
  </div>

  <% course.lessons.last_lessons_preview.each do |lesson| %>
    <div class="col-span-2 grid grid-cols-2 px-4 py-2 h-36 bg-zinc-300 rounded-xl justify-center">
      <span class="flex font-bold text-xl text-zinc-600 justify-center">Урок <%= lesson.order %></span>
      <div class="flex justify-end">
        <a href="<%= course_lessons_path(course.id) %>" role="button" class="flex me-1 col-span-1 w-5 h-5">
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path d="M15.6287 5.12132L4.31497 16.435M15.6287 5.12132L19.1642 8.65685M15.6287 5.12132L17.0429 3.70711C17.4334 3.31658 18.0666 3.31658 18.4571 3.70711L20.5784 5.82843C20.969 6.21895 20.969 6.85212 20.5784 7.24264L19.1642 8.65685M7.85051 19.9706L4.31497 16.435M7.85051 19.9706L19.1642 8.65685M7.85051 19.9706L3.25431 21.0312L4.31497 16.435" stroke="#000000" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
        <a href="<%= course_lessons_path(course.id) %>" role="button" class="flex ms-1 me-1 col-span-1 w-5 h-5">
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <g clip-path="url(#clip0_15_200)">
              <circle cx="12" cy="13" r="2" stroke="#000000" stroke-linejoin="round"/>
              <path d="M12 7.5C7.69517 7.5 4.47617 11.0833 3.39473 12.4653C3.14595 12.7832 3.14595 13.2168 3.39473 13.5347C4.47617 14.9167 7.69517 18.5 12 18.5C16.3048 18.5 19.5238 14.9167 20.6053 13.5347C20.8541 13.2168 20.8541 12.7832 20.6053 12.4653C19.5238 11.0833 16.3048 7.5 12 7.5Z" stroke="#000000" stroke-linecap="round" stroke-linejoin="round"/>
            </g>
          </svg>
        </a>
        <a href="<%= course_lessons_path(course.id) %>" role="button" class="flex ms-1 col-span-1 w-5 h-5">
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path d="M5 7.5H19L18 21H6L5 7.5Z" stroke="#000000" stroke-linejoin="round"/>
            <path d="M15.5 9.5L15 19" stroke="#000000" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M12 9.5V19" stroke="#000000" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M8.5 9.5L9 19" stroke="#000000" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M16 5H19C20.1046 5 21 5.89543 21 7V7.5H3V7C3 5.89543 3.89543 5 5 5H8M16 5L15 3H9L8 5M16 5H8" stroke="#000000" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>
      <span class="flex col-span-2 w-full text-ellipsis line-clamp-2 mt-4 font-bold text-sm text-zinc-400 justify-center place-content-center"><%= lesson.title %></span>
      <%#= button_to new_user_course_path(current_user), class: 'flex bg-orange-100 mt-4 w-full text-xs rounded-box border-[1px] border-zinc-800 text-zinc-700 px-2 py-2 place-content-center' do %>
      <!--        Редактировать-->
      <%# end %>
    </div>
  <% end %>

  <a href="<%= course_lessons_path(course.id) %>" role="button" class="flex col-span-1 px-4 bg-zinc-150 rounded-xl border-[1px] border-zinc-800 justify-center items-center hover:background-[#B91C1C]">
    <svg class="flex h-10 w-10" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path d="M6 12H18M18 12L13 7M18 12L13 17" stroke="#000000" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </a>
</div>