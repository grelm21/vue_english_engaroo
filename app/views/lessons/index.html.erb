<%= render 'navigation/nav_bar' %>

<div class="col-span-12 w-full pt-6">
  <div class="flex justify-center pb-6">
    <span class="font-bold text-xl text-zinc-800 px-2 py-2 justify-center rounded-lg"><%= @course.title %></span>
    <div class="ps-5">
      <%= button_to new_course_lesson_path(@course), method: :get, class: 'font-bold text-xl text-zinc-800 px-2 py-2 justify-center bg-orange-200 rounded-lg border-[1px] border-zinc-800' do %>
        + Добавить урок
      <% end %>
    </div>
  </div>
</div>

<% if @lessons.empty? %>
  <div class="col-start-4 col-end-10  mb-5 px-4 py-2">
    <span class="flex text-zinc-600 text-xl justify-center">Вы пока не добавили ни одного урока в курс</span>
  </div>
<% end %>

<% @lessons.each do |lesson| %>
  <div class="grid grid-cols-2 col-start-4 col-end-10 rounded-lg bg-zinc-100 mb-5 px-4 py-2 justify-center">
      <div class="flex font-bold text-zinc-600 text-xl justify-start"><%= lesson.title %></div>
      <div class="flex justify-end">
        <a href="<%= courses_path %>" role="button" class="flex me-1 col-span-1 w-6 h-6 justify-center items-center">
          <svg class="h-8 w-8" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path d="M15.6287 5.12132L4.31497 16.435M15.6287 5.12132L19.1642 8.65685M15.6287 5.12132L17.0429 3.70711C17.4334 3.31658 18.0666 3.31658 18.4571 3.70711L20.5784 5.82843C20.969 6.21895 20.969 6.85212 20.5784 7.24264L19.1642 8.65685M7.85051 19.9706L4.31497 16.435M7.85051 19.9706L19.1642 8.65685M7.85051 19.9706L3.25431 21.0312L4.31497 16.435" stroke="#000000" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
        <a href="<%= courses_path %>" role="button" class="flex ms-1 me-1 col-span-1 w-6 h-6 justify-center items-center">
          <svg class="h-8 w-8" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
